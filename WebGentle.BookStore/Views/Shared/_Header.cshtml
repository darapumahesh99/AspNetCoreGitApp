@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration

@inject WebGentle.BookStore.Repository.IBookRepository _bookRepo
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewBookAlert> _newBookAlertConfiguration



<header>
    <div class="container">
        <h2>@_bookRepo.GetAppName()</h2>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            @*<big>Top Books</big>
            <p big="">Books are top</p>*@

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">


                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="home" asp-action="index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="home" asp-action="AboutUs">About Us</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="getAllBooks">All books</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="getAllBooks" asp-protocol="http" asp-host="wikipedia.com">New Link</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="AddNewBook">Add New Book</a>
                    </li>

                </ul>

               <ul class="navbar-nav">
                   <partial name="_LoginInfo"/>
               </ul>

            </div>
        </nav>
        @if(_newBookAlertConfiguration.Value.DisplayBookAlert){
        <div class="alert alert-info" role="alert">
            @(_newBookAlertConfiguration.Value.BookName)
        </div>
        }

    </div>
</header>