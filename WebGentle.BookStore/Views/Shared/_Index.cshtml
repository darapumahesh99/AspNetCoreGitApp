@model BookModel

<div class="card mb-4 shadow-sm">
<img src="@Model.CoverImageUrl" class="img-thumbnail"/>
<div class="card-body">
    <div class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name not Available" : Model.Title)</div>
    <p class="card-text">@Model.Description</p>
    <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <a asp-route="BookByID" asp-route-id="@Model.Id" asp-fragment="similarBooks" class="btn btn-sm btn-outline-secondary"> view details</a>
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" href="@Model.PdfFileUrl" target="_blank">
                        Read now 
                    </a>
                </div>
            </div>
        </div>

        <small class="text-muted">@Model.Author</small>
    </div>
</div>
    </div>