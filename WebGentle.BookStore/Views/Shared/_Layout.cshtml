<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Book Store Application</title>
    

    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        
        <script src="~/lib/jquery/jquery.js"></script>
    </environment>

    <environment exclude="Development">
        @*<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
        <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="property"
              asp-fallback-test-value="absolute"
              integrity=""
              crossorigin="anonymous">
        
        <script src="~/lib/jquery/jquery.min.js"></script>
    </environment>
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="home" asp-action="AboutUs">About Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="book" asp-action="getAllBooks">All books</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="book" asp-action="getAllBooks" asp-protocol="http" asp-host="wikipedia.com">New Link</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="book" asp-action="AddNewBook">Add New Book</a>
                        </li>

                    </ul>

                </div>
            </nav>

        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <!-- Footer -->
    
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
<footer class="page-footer font-small blue">

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">
        Copyright &copy; Book Store @DateTime.Now.Year
        <custom-email my-email="darapumahesh79@gmail.com"></custom-email>
    </div>
    <!-- Copyright -->

</footer>
</html>

